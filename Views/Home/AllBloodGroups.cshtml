@{
    var items = (List<User>)ViewData["nghbld"];
}
<div class="table-responsive">
    <table class="table border mb-0">
        <thead class="table-light fw-semibold">
            <tr class="align-middle">
                <th class="text-center">
                    <svg class="icon">
                        <use xlink:href="/vendors/coreui/icons/svg/free.svg#cil-people"></use>
                    </svg>
                </th>
                <th>Kullanıcı</th>
                <th class="text-center">Adres</th>
                <th>Kan Grubu</th>
            </tr>
        </thead>
        @if (items != null)
        {
            <tbody>
                @foreach (var item in items)
                {


                    <tr class="align-middle">
                        <td class="text-center">
                            <div class="avatar avatar-md">
                                <svg class="icon">
                                    <use xlink:href="/vendors/coreui/icons/svg/free.svg#cil-user"></use>
                                </svg><span class="avatar-status bg-success"></span>
                            </div>
                        </td>
                        <td>@item.Ad @item.Soyad</td>
                        <td class="text-center">
                            <div class="clearfix">
                                @item.Adres
                            </div>
                        </td>
                        <td>
                            <div class="small text-medium-emphasis">Kan Grup</div>
                            <div class="fw-semibold">@item.Kan_Grup</div>
                        </td>
                    </tr>
                }
            </tbody>
        }
    </table>
</div>
